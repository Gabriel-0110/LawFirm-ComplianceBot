{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "microsoftAppId": {
      "value": "${MICROSOFT_APP_ID}"
    },
    "microsoftAppPassword": {
      "value": "${MICROSOFT_APP_PASSWORD}"
    },
    "microsoftAppTenantId": {
      "value": "${MICROSOFT_APP_TENANT_ID}"
    },
    "azureAdClientId": {
      "value": "${AZURE_AD_CLIENT_ID}"
    },
    "azureAdClientSecret": {
      "value": "${AZURE_AD_CLIENT_SECRET}"
    },
    "appServicePlanSku": {
      "value": "${APP_SERVICE_PLAN_SKU=B1}"
    },
    "storageAccountSku": {
      "value": "${STORAGE_ACCOUNT_SKU=Standard_LRS}"
    },
    "botDisplayName": {
      "value": "${BOT_DISPLAY_NAME=Teams Compliance Bot}"
    },
    "botDescription": {
      "value": "${BOT_DESCRIPTION=Enterprise compliance bot for Microsoft Teams call recording and management}"
    }
  }
}
